---
import Frame from './icons/Frame.astro';
import Profile from './icons/Profile.astro';
import FrameCircle from './icons/Frame-circle.astro';
---

<main class="grid sm:grid-cols-3 mt-40 max-w-7xl w-full mx-auto sm:mb-28 px-2 sm:rounded-3xl text-white dark:text-[#665fcc] sm:bg-[url('/assets/backgrounds/blob-scene-haikei-hero.svg')] dark:sm:bg-[url('/assets/backgrounds/blob-scene-haikei-heo-dark.svg')] bg-cover bg-center bg-no-repeat py-10" id="hero">
	<h1 class="grid sm:items-end text-center text-2xl sm:text-xl md:text-2xl font-semibold">AWS DevOps Jr. and Mechanical Engineer with MBA (Project Admin)</h1>
	<div class="-order-1 sm:order-1 grid items-center justify-center">
		<img src="/assets/jljulioa-2.png" class="hero-image max-w-96 sm:bg-white bg-[url('/assets/backgrounds/bg-profile-1.svg')] dark:bg-[url('/assets/backgrounds/bg-profile-dark.svg')]  dark:sm:bg-[#665fcc] bg-cover bg-center bg-no-repeat" alt="jljulioa">
	</div>
	<h1 class="grid sm:justify-end text-center pb-4 text-3xl sm:text-4xl md:text-5xl font-bold -order-1 sm:order-1">@Jaime Julio A.</h1>
</main>
<img src="/assets/backgrounds/bg-div-up.svg" class="w-full sm:hidden dark:hidden pb-20" alt="">
<img src="/assets/backgrounds/bg-div-up-dark.svg" class="w-full hidden dark:block dark:sm:hidden pb-20" alt="">


<style>
	.hero-image {
		-webkit-mask-image: url(/assets/frame.svg);
		-webkit-mask-size: contain;
		-webkit-mask-repeat: no-repeat;
	}
</style>